{
  "name": "matrix-calculator",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": {
    "name": "Oscar Obando",
    "email": "oscaroe04@uniandes.edu.ec"
  },
  "contributors": [
    { "name": "Darlinton Sanchez", "email": "darlintonsa22@uniandes.edu.ec"},
    { "name": "Angelo Guerron", "email": "angelogr86@uniandes.edu.ec"}
  ],
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.uniproyect.matrixcalc",
    "productName": "Matrix Calculator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "../backend/dist/**"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/",
        "to": "backend",
        "filter": ["app*", "app.exe"]
      }
    ],
    "win": { "target": ["nsis"] },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": { "target": ["dmg", "zip"] },
    "linux": { "target": ["AppImage", "deb"] }
  }

}
